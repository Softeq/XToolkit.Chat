<?xml version="1.0" encoding="UTF-8"?>
<resources>
  <style name="ChatTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="android:colorPrimary">@color/chat_brand_color</item>
    <item name="android:colorPrimaryDark">@color/chat_secondary_text_color</item>
    <item name="android:colorAccent">@color/chat_brand_color</item>
    <item name="android:textColorPrimary">@color/chat_primary_text_color</item>
    <item name="android:textColorSecondary">@color/chat_secondary_text_color</item>
    <item name="android:colorControlNormal">@color/chat_normal_control_color</item>
    <item name="android:colorButtonNormal">@color/chat_normal_control_color</item>
    <item name="android:colorControlActivated">@color/chat_brand_color</item>
    <item name="android:colorBackground">@android:color/white</item>
    <item name="android:windowBackground">@android:color/white</item>
  </style>
  <style name="ChatMemberTextStyle">
    <item name="android:textSize">17sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/chat_primary_text_color</item>
  </style>
  <style name="ChatSecondaryTextStyle">
    <item name="android:textSize">13sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/chat_primary_text_color</item>
  </style>
  <style name="SwitchCompatTheme">
    <item name="colorControlActivated">@color/chat_brand_color</item>
  </style>
</resources>