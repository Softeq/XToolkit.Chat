<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="wrap_content">
    <ffimageloading.views.ImageViewAsync
        android:id="@+id/view_holder_member_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:scaleType="center"
        android:id="@+id/view_holder_member_remove"
        android:layout_toEndOf="@id/view_holder_member_avatar"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="22dp" />
    <TextView
        android:layout_below="@id/view_holder_member_avatar"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:maxLines="1"
        android:id="@+id/view_holder_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end" 
        style="@style/ChatSecondaryTextStyle" />
</RelativeLayout>
