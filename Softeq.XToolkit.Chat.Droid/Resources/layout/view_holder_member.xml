<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp">
    <ffimageloading.views.ImageViewAsync
        android:id="@+id/view_holder_member_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="#ff43cf33" />
    <ImageButton
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:scaleType="center"
        android:id="@+id/view_holder_member_remove"
        android:layout_marginLeft="46dp"
        android:background="#ffec3737"
        android:layout_marginTop="26dp" />
    <TextView
        android:maxLines="1"
        android:id="@+id/view_holder_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end" 
        android:text="sfdsff"
        style="@style/ChatSecondaryTextStyle" />
</RelativeLayout>
